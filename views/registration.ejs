<!DOCTYPE HTML>
<html lang="en">

<head>
  <%- include('partials/head',title) %>
</head>

<body>

  <main class="login-page">
    <div class="container z-depth-3">
      <h5>Create an Account</h5>
      <form id="frm-registration" action="Register" method="POST">
        <div class="row center">
          <div class="input-field col s12">
            <input id="name" type="text" class="validate" name="Name"  required value=<%= name %>>
            <label for="name" class="active">Name</label>
          </div>
        </div>
        <div class="row center"> 
          <div class="input-field col s12">
            <input id="username" type="text" class="validate" name="Username" required value=<%= username %>>
            <label for="username">Username</label>
          </div>
        </div>
        <div class="row center"> 
          <div class="input-field col s12">
            <input id="password" type="password" class="validate" name="Password" required value=<%= password %>>
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row center"> 
          <div class="input-field col s12">
            <input id="confirm_password" type="password" class="validate" name="Confirm_password" required value=<%= confirm_password %>>
            <label for="confirm_password">Confirm Password</label>
          </div>
        </div>
        <div class="row center">
          <button id="btn-register" class="waves-effect waves-light btn center app-button" type="submit">Register</button>
          <a href="/Signin" class="waves-effect waves-light btn center app-button">Sign In</a>
          <a href="/" class="waves-effect waves-light btn center app-button">Cancel</a>
        </div>
        <div class="error"><%= message %></div>
      </form>
    </div>
  </main>

  <footer class="page-footer">
    <%- include ("partials/footer_bottom") %>
  </footer>

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
  <script src="env.js"></script>
</body>

</html>